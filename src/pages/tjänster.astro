---
import Layout from "../layouts/Layout.astro";

const services = [
  {
    title: "Huvudtjänst Ett",
    description:
      "En omfattande beskrivning av vår första huvudtjänst som ger värde till våra kunder. Vi fokuserar på kvalitet och resultat i varje projekt.",
    features: [
      "Viktigt område ett",
      "Betydelsefullt område två",
      "Centralt område tre",
      "Väsentligt område fyra",
      "Avgörande område fem",
    ],
    image:
      "https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?auto=format&fit=crop&q=80&w=800",
  },
  {
    title: "Huvudtjänst Två",
    description:
      "Detaljerad beskrivning av vår andra huvudtjänst som levererar mervärde genom innovation och expertis.",
    features: [
      "Primär funktion ett",
      "Sekundär funktion två",
      "Tertiär funktion tre",
      "Ytterligare funktion fyra",
    ],
    image:
      "https://images.unsplash.com/photo-1552664730-d307ca884978?auto=format&fit=crop&q=80&w=800",
  },
  {
    title: "Huvudtjänst Tre",
    description:
      "En genomgående beskrivning av vår tredje huvudtjänst som kombinerar erfarenhet med modern metodik.",
    features: [
      "Kärnkompetens ett",
      "Specialområde två",
      "Fokusområde tre",
      "Expertisområde fyra",
    ],
    image:
      "https://images.unsplash.com/photo-1600880292203-757bb62b4baf?auto=format&fit=crop&q=80&w=800",
  },
];

const specializedServices = [
  {
    title: "Specialområde Ett",
    features: [
      "Specialisering 1.1",
      "Specialisering 1.2",
      "Specialisering 1.3",
      "Specialisering 1.4",
      "Specialisering 1.5",
    ],
  },
  {
    title: "Specialområde Två",
    features: [
      "Specialisering 2.1",
      "Specialisering 2.2",
      "Specialisering 2.3",
      "Specialisering 2.4",
      "Specialisering 2.5",
    ],
  },
  {
    title: "Specialområde Tre",
    features: [
      "Specialisering 3.1",
      "Specialisering 3.2",
      "Specialisering 3.3",
      "Specialisering 3.4",
      "Specialisering 3.5",
    ],
  },
  {
    title: "Specialområde Fyra",
    features: [
      "Specialisering 4.1",
      "Specialisering 4.2",
      "Specialisering 4.3",
      "Specialisering 4.4",
      "Specialisering 4.5",
    ],
  },
];
---

<Layout title="Våra Tjänster - NG STHLM AB">
  <!-- Hero Section -->
  <section class="relative py-20 bg-secondary text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl" data-aos="fade-up">
        <h1 class="text-5xl font-bold mb-6">Våra Tjänster</h1>
        <p class="text-xl text-gray-300">
          Från idé till verklighet – vi gör dina visioner möjliga
        </p>
      </div>
    </div>
  </section>

  <!-- Main Services -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="space-y-20">
        {
          services.map((service, index) => (
            <div
              class="grid md:grid-cols-2 gap-12 items-center"
              data-aos="fade-up"
            >
              <div class={index % 2 === 0 ? "order-1" : "order-1 md:order-2"}>
                <img
                  src={service.image}
                  alt={service.title}
                  class="rounded-lg shadow-lg w-full h-[400px] object-cover"
                />
              </div>
              <div class={index % 2 === 0 ? "order-2" : "order-2 md:order-1"}>
                <h2 class="text-3xl font-bold text-secondary mb-4">
                  {service.title}
                </h2>
                <p class="text-gray-600 mb-6">{service.description}</p>
                <ul class="space-y-3">
                  {service.features.map((feature) => (
                    <li class="flex items-center text-gray-700">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5 text-primary mr-3"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M4.5 12.75l6 6 9-13.5"
                        />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Specialized Services -->
  <section class="py-20 bg-accent">
    <div class="container mx-auto px-4">
      <h2
        class="text-3xl font-bold text-secondary mb-12 text-center"
        data-aos="fade-up"
      >
        Specialiserade Tjänster
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          specializedServices.map((service) => (
            <div class="bg-white p-8 rounded-lg shadow-lg" data-aos="fade-up">
              <h3 class="text-xl font-bold text-secondary mb-4">
                {service.title}
              </h3>
              <ul class="space-y-3">
                {service.features.map((feature) => (
                  <li class="flex items-center text-gray-700">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-5 h-5 text-primary mr-3"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M4.5 12.75l6 6 9-13.5"
                      />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-secondary mb-6">
          Redo att Starta Ditt Projekt?
        </h2>
        <p class="text-gray-600 mb-8">
          Kontakta oss idag för en detaljerad konsultation om dina behov. Vårt
          expertteam är redo att förverkliga din vision.
        </p>
        <div class="flex justify-center gap-4">
          <a
            href="/kontakt"
            class="bg-primary hover:bg-primary/90 text-white px-8 py-3 rounded-none transition-colors"
          >
            Få en Offert
          </a>
          <a
            href="/projekt"
            class="bg-secondary hover:bg-secondary/90 text-white px-8 py-3 rounded-none transition-colors"
          >
            Se Våra Projekt
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
