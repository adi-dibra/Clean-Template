---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ServiceCard from "../components/ServiceCard.astro";

const services = [
  {
    title: "Kommersiellt Byggande",
    description:
      "Omfattande kommersiella byggprojekt från kontorskomplex till butikslokaler.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h1.5m-1.5 3h1.5m-1.5 3h1.5m3-6H15m-1.5 3H15m-1.5 3H15M9 21v-3.375c0-.621.504-1.125 1.125-1.125h3.75c.621 0 1.125.504 1.125 1.125V21" />
    </svg>`,
  },
  {
    title: "Bostadsbyggande",
    description:
      "Skräddarsydda bostadsprojekt och omfattande bostadsutveckling.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
    </svg>`,
  },
  {
    title: "Renovering & Ombyggnad",
    description:
      "Expertis inom renovering för både bostäder och kommersiella fastigheter.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" />
    </svg>`,
  },
];

const stats = [
  { number: "150+", label: "Genomförda Projekt" },
  { number: "10+", label: "Expertmedarbetare" },
  { number: "5", label: "Års Erfarenhet" },
  { number: "98%", label: "Nöjda Kunder" },
];

const projects = [
  {
    title: "Dalarna",
    image: "bild2.webp",
    category: "BRF",
  },
  {
    title: "Vaxholm",
    image: "bild3.webp",
    category: "Renovering",
  },
  {
    title: "Gotland",
    image: "bild4.webp",
    category: "Bostad",
  },
];
---

<Layout title="NG STHLM AB - Byggföretag i Stockholm">
  <Hero />

  <!-- Tjänster -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-4xl font-bold text-secondary mb-4">Våra Tjänster</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Vi erbjuder omfattande bygg- och renoveringstjänster anpassade efter
          dina specifika behov
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {services.map((service) => <ServiceCard {...service} />)}
      </div>
    </div>
  </section>

  <!-- Statistik -->
  <section class="py-16 bg-secondary text-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        {
          stats.map((stat) => (
            <div data-aos="fade-up">
              <div class="text-4xl font-bold text-primary mb-2">
                {stat.number}
              </div>
              <div class="text-gray-300">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Utvalda Projekt -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-4xl font-bold text-secondary mb-4">Utvalda Projekt</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Utforska några av våra senaste bygg- och renoveringsprojekt i
          Stockholm
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          projects.map((project) => (
            <div
              class="group relative overflow-hidden rounded-lg shadow-lg"
              data-aos="fade-up"
            >
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-64 object-cover transition-transform group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex flex-col justify-end p-6 text-white">
                <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform">
                  <div class="text-sm text-primary mb-1">
                    {project.category}
                  </div>
                  <h3 class="text-xl font-semibold">{project.title}</h3>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div class="text-center mt-12">
        <a
          href="/projects"
          class="inline-block bg-primary hover:bg-primary/90 text-white px-8 py-3 rounded-none transition-colors"
        >
          Se Alla Projekt
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Sektion -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto" data-aos="fade-up">
        <h2 class="text-4xl font-bold text-secondary mb-4">
          Redo att Starta Ditt Projekt?
        </h2>
        <p class="text-gray-600 mb-8">
          Kontakta oss idag för en kostnadsfri konsultation och offert. Låt oss
          förverkliga din byggvision.
        </p>
        <a
          href="/contact"
          class="inline-block bg-primary hover:bg-primary/90 text-white px-8 py-3 rounded-none transition-colors"
        >
          Kontakta Oss
        </a>
      </div>
    </div>
  </section>
</Layout>
