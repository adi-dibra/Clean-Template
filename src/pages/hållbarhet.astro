---
import Layout from '../layouts/Layout.astro';

const initiatives = [
  {
    title: "Samhällsinitiativ",
    description: "Beskrivning av vårt engagemang i samhällsutveckling och sociala projekt.",
    image: "initiative1.jpg",
    type: "social"
  },
  {
    title: "Miljöarbete",
    description: "Beskrivning av våra miljömål och hållbarhetsarbete.",
    image: "initiative2.jpg",
    type: "environmental"
  },
  {
    title: "Hållbar Utveckling",
    description: "Beskrivning av våra metoder för hållbart byggande.",
    image: "initiative3.jpg",
    type: "environmental"
  }
];

const environmentalStats = [
  { number: "25%", label: "Energibesparing" },
  { number: "50%", label: "Återvunnet Material" },
  { number: "80%", label: "Förnybar Energi" },
  { number: "40%", label: "Minskad Miljöpåverkan" }
];
---

<Layout title="Hållbarhet & Samhällsansvar">
  <!-- Hero Section -->
  <section class="relative py-20 bg-secondary text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl" data-aos="fade-up">
        <h1 class="text-5xl font-bold mb-6">Hållbarhet & Samhällsansvar</h1>
        <p class="text-xl text-gray-300">
          Vi skapar hållbara lösningar för framtiden
        </p>
      </div>
    </div>
  </section>

  <!-- Environmental Commitment -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div data-aos="fade-right">
          <img
            src="https://images.unsplash.com/photo-1500916434205-0c77489c6cf7?w=800"
            alt="Miljöansvar"
            class="rounded-lg shadow-lg"
          />
        </div>
        <div data-aos="fade-left">
          <h2 class="text-3xl font-bold text-secondary mb-6">Miljöansvar</h2>
          <p class="text-gray-600 mb-6">
            Vi arbetar aktivt med att minska vår miljöpåverkan genom moderna metoder och noggranna materialval. Hållbarhet är en central del i vår verksamhet.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mt-1 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">100% förnybar energi på alla våra byggarbetsplatser</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mt-1 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Omfattande återvinningsprogram för byggmaterial</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary mt-1 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Miljöcertifierade leverantörer och material</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Responsibility -->
  <section class="py-20 bg-accent">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-secondary mb-6">Samhällsengagemang</h2>
        <p class="text-gray-600 max-w-3xl mx-auto">
          Vi är stolta över vårt samarbete med Barncancerfonden och andra viktiga samhällsinitiativ. Genom aktivt engagemang och ekonomiskt stöd bidrar vi till ett bättre samhälle.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {initiatives.map(initiative => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden" data-aos="fade-up">
            <img
              src={initiative.image}
              alt={initiative.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold text-secondary mb-3">{initiative.title}</h3>
              <p class="text-gray-600">{initiative.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Environmental Stats -->
  <section class="py-16 bg-secondary text-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        {environmentalStats.map(stat => (
          <div data-aos="fade-up">
            <div class="text-4xl font-bold text-primary mb-2">{stat.number}</div>
            <div class="text-gray-300">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Certifications -->
  <section class="py-20">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-secondary mb-12" data-aos="fade-up">Certifieringar</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="p-6 bg-white rounded-lg shadow-lg" data-aos="fade-up">
          <img
            src="https://images.unsplash.com/photo-1535813547-99c456a41d4a?w=800"
            alt="BREEAM Certifiering"
            class="w-24 h-24 mx-auto mb-4 rounded-full object-cover"
          />
          <h3 class="text-xl font-bold text-secondary mb-2">Miljöcertifiering A</h3>
          <p class="text-gray-600">Certifiering för hållbart byggande</p>
        </div>
        <div class="p-6 bg-white rounded-lg shadow-lg" data-aos="fade-up">
          <img
            src="https://images.unsplash.com/photo-1518640467707-6811f4a6ab73?w=800"
            alt="ISO Certifiering"
            class="w-24 h-24 mx-auto mb-4 rounded-full object-cover"
          />
          <h3 class="text-xl font-bold text-secondary mb-2">Miljöcertifiering B</h3>
          <p class="text-gray-600">Certifierat ledningssystem</p>
        </div>
        <div class="p-6 bg-white rounded-lg shadow-lg" data-aos="fade-up">
          <img
            src="https://images.unsplash.com/photo-1473341304170-971dccb5ac1e?w=800"
            alt="Svanen Certifiering"
            class="w-24 h-24 mx-auto mb-4 rounded-full object-cover"
          />
          <h3 class="text-xl font-bold text-secondary mb-2">Miljöcertifiering C</h3>
          <p class="text-gray-600">Miljömärkt verksamhet</p>
        </div>
      </div>
    </div>
  </section>
</Layout>