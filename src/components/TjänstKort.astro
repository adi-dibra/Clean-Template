---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="group bg-white p-8 hover:bg-accent transition-colors duration-300" data-aos="fade-up">
  <div class="text-primary mb-6 transform group-hover:scale-110 transition-transform duration-300">
    <Fragment set:html={icon} />
  </div>
  <h3 class="text-xl font-semibold text-secondary mb-3">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>