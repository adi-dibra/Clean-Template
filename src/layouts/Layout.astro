---
import '@fontsource/playfair-display/400.css';
import '@fontsource/playfair-display/700.css';
import '@fontsource-variable/montserrat';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "NG STHLM AB - Stockholms ledande byggföretag för premium byggprojekt och renoveringar" } = Astro.props;
---

<!doctype html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        AOS.init({
          duration: 800,
          once: true,
          offset: 100,
          disable: window.innerWidth < 768
        });
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --accent: 200, 169, 126;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    font-family: 'Montserrat Variable', sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  main {
    flex: 1;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
  }

  .btn-primary {
    @apply bg-primary hover:bg-primary/90 text-white px-8 py-3 rounded-none transition-colors uppercase tracking-wider text-sm;
  }

  .btn-secondary {
    @apply bg-secondary hover:bg-secondary/90 text-white px-8 py-3 rounded-none transition-colors uppercase tracking-wider text-sm;
  }

  .section-title {
    @apply text-3xl md:text-4xl font-bold text-secondary mb-6;
  }

  .container {
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
    max-width: 1280px;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  @media (max-width: 768px) {
    h1 {
      @apply text-3xl;
    }
    h2 {
      @apply text-2xl;
    }
    [data-aos] {
      opacity: 1 !important;
      transform: none !important;
    }
  }
</style>